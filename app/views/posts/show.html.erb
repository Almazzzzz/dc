<h3><%= @post.title %></h3>

<p><b>Body:</b>
  <%= @post.body %></p>

<p><b>User:</b>
  <%= @post.user_id %></p>

<p><b>Is pinned:</b>
  <%= @post.is_pinned %></p>

<p><b>Is draft:</b>
  <%= @post.is_draft %></p>

<p><b>Commentable:</b>
  <%= @post.commentable %></p>

<p><b>Comments total:</b>
  <%= @post.thread.comments.count %></p>

<% if belongs_to_user?(@post) %>
  <%= link_to 'Edit', edit_post_path(@post) %> | 
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> | 
  <%= link_to 'All posts', posts_path %> | 
  <%= link_to 'My posts', my_posts_path %>
<% end %>
<p></p>

<nav aria-label="...">
  <ul class="pager">
    <li><%= link_to '< Prev. Post', Post.where("id < ?", @post.id).last %></li>
    <li><%= link_to 'Next Post >', Post.where("id > ?", @post.id).first %></li>
  </ul>
</nav>

<%= commontator_thread(@post) if @post.commentable %>