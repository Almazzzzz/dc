
<h1><%= @profile.user == current_user ? 'My' : 'User ' +
	(@profile.user.username ? @profile.user.username : @profile.user.email) + "'s" %> profile</h1>

<br />
<%= @profile.avatar? ? image_tag(@profile.avatar, size: '100', alt: "#{@profile.user.username}") : image_tag('man.png', size: '100', alt: "#{@profile.user.username}") %>

<br />

<h3>Name:</h3>
<p><%= @profile.full_name || 'n/a' %></p>

<% if @profile.show_email or can? :destroy, @profile %>
<h3>Email:</h3>
	<p><%= @profile.user.email %></p>
<% end %>

<% if @profile.show_phone or can? :destroy, @profile %>
	<h3>Phone Number:</h3>
	<p><%= @profile.phone || 'n/a' %></p>
<% end %>
<br />

<% if @profile.user == current_user or current_user.is_admin? %>
	<%= link_to "Edit Profile", edit_profile_path, class: "btn btn-lg btn-primary" %>
<% end %>
