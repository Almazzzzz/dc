<h1>Edit Profile</h1>

<%= simple_form_for @profile, url: profile_path, html: {multipart: true} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :middle_name %>
      <%= f.input :phone %>
      <p><b>Show data:</b></p>
      <%= f.input :show_phone, label: 'Show my phone to other users' %>
      <%= f.input :show_email, label: 'Show my e-mail to other users' %>
      <%= f.input :avatar, hint: @profile.avatar? ? image_tag(@profile.avatar, size: '100') : image_tag('man.png', size: '100') %>
      <%= f.hidden_field :avatar_cache %>
      <%= f.input :remove_avatar, as: :boolean, label: 'Remove avatar' if @profile.avatar? %>
    </div>
    <br><br>
    <div class="form-actions">
      <%= f.submit 'Update Profile', class: "btn btn-lg btn-success"  %>
    </div>
<% end %>