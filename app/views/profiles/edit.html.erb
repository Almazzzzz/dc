<h1>Edit Profile</h1>

<%= simple_form_for @profile, url: profile_path do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :middle_name %>
      <%= f.input :phone %>
      <p><b>Avatar</b></p>
      <%= image_tag(@profile.avatar, size: '150') if @profile.avatar? %>
      <br><br>
      <%= f.file_field :avatar %>
    </div>
    <br><br>
    <div class="form-actions">
      <%= f.submit 'Update Profile', class: "btn btn-lg btn-success"  %>
    </div>
<% end %>